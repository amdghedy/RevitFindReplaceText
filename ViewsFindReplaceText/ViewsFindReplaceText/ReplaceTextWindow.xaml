<Window x:Class="FindReplaceRevit.ReplaceTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Replace Text in Revit" Height="300" Width="400">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Find Text:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtFindText" Width="200" Height="25" Margin="0,0,0,-10"/>

            <TextBlock Text="Replace With:" Margin="0,10,0,10"/>
            <TextBox x:Name="txtReplaceText" Width="200" Height="25" Margin="0,0,0,10"/>

            <CheckBox x:Name="chkPreview" Content="Preview Only" Margin="0,0,0,10"/>

            <Button Content="Replace" Width="100" Height="30" Click="btnReplace_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Click="btnCancel_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
